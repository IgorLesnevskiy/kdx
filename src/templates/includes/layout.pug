        block styles
            link(rel='stylesheet', href= baseUrl + "css/vendor.css")
            link(rel='stylesheet', href= baseUrl + "css/main.css")
        block scripts
            script(src= baseUrl + "js/vendor.bundle.js")
            script(src= baseUrl + "js/main.bundle.js")
    body
        div.l-page-wrapper
            div.l-page-wrapper__inner
                div.l-page
                    div.l-page__header
                        block header
                            div.b-header
                                div.b-header__inner
                                    div.b-header__logo
                                        a.b-header__logo-link(href=baseUrl)
                                            img(src=baseUrl + "images/decor/logo.png" alt="Captain Quack logo")
                    div.l-page__content
                        block page-title
                            div.l-page__title Заголовок страницы
                        div.content-area
                            block content
                    div.l-page__footer
                        block footer
                            div.b-footer
                                div.b-footer__inner
                                    div.b-footer__copyright © 2015 CAPTAIN QUACK <br/>Десница тысячелетия и моллюск!
